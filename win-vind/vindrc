noremap <esc-h> <esc-left>
inoremap <esc-h> <esc-left>
rnoremap <esc-h> <esc-left>

noremap <esc-l> <esc-right>
inoremap <esc-l> <esc-right>
rnoremap <esc-l> <esc-right>

noremap <esc-j> <esc-down>
inoremap <esc-j> <esc-down>
rnoremap <esc-j> <esc-down>

noremap s :sw<cr>
noremap H <snap_current_window_to_left>
noremap L <snap_current_window_to_right>
noremap K <snap_current_window_to_top>
noremap J <snap_current_window_to_bottom>

gvnoremap a <click_right>

"EasyClick 字体设置. 改为类似Vimium的黑黄配色 
set easyclick_fontsize=16
set easyclick_fontweight=800
set easyclick_fontname = MSYH    "微软雅黑字体
set easyclick_fontcolor=#000000
set easyclick_bgcolor=#fae26b

set cmd_fadeout=3600
set cursor_accel=20