    "editor.inlineSuggest.enabled": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false
    },
    "editor.wordWrap": "off",
    "diffEditor.renderSideBySide": false,
    "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
    "codeium.enableConfig": {
        "*": true,
        "log": true
    },
    // python related
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    // "python.linting.pylintPath": "backend/.venv/bin/pylint",
    // use the following ways to disable checkings you don't want to have
    "python.linting.pylintArgs": [
        "--max-line-length=120",
        "--disable=C0103,C0114,C0115,C0116,W1203,W0621,C0304"
    ],
    "python.linting.mypyEnabled": true,
    "python.linting.mypyArgs": [
        "--ignore-missing-imports",
        "--show-column-numbers",
        "--check-untyped-defs",
    ],
    // "python.linting.mypyPath": "backend/.venv/bin/mypy",
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.formatting.provider": "none",
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/node_modules/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true
    },
    "workbench.iconTheme": "vscode-icons",
    "editor.guides.bracketPairs": true,
    "whichkey.bindings": [
        {
            "key": "r",
            "name": "Refactoring",
            "type": "bindings",
            "bindings": [
                {
                    "key": "r",
                    "name": "rename",
                    "type": "command",
                    "command": "editor.action.rename"
                },
                {
                    "key": "s",
                    "name": "Sort Python Imports",
                    "type": "conditional",
                    "bindings": [
                        {
                            "key": "languageId:python",
                            "name": "Sort Python Imports",
                            "type": "command",
                            "command": "python.sortImports"
                        }
                    ]
                }
            ]
        },
        {
            "key": "f",
            "name": "Format code",
            "type": "bindings",
            "bindings": [
                {
                    "key": "d",
                    "name": "Format Document",
                    "type": "command",
                    "command": "editor.action.formatDocument",
                    "args": {
                        "insertSpaces": true,
                        "tabSize": 4
                    }
                }
            ]
        },
        {
            "key": "d",
            "name": "Debug...",
            "type": "bindings",
            "bindings": [
                {
                    "key": "r",
                    "name": "Save and Start Debugging",
                    "type": "command",
                    "command": "workbench.action.files.save; workbench.action.debug.start"
                },
                {
                    "key": "a",
                    "name": "Save and Restart Debugging",
                    "type": "command",
                    "command": "workbench.action.files.save; workbench.action.debug.restart"
                },
                {
                    "key": "b",
                    "name": "Toggle Breakpoint",
                    "type": "command",
                    "command": "editor.debug.action.toggleBreakpoint"
                },
                {
                    "key": "c",
                    "name": "Continue Debugging",
                    "type": "command",
                    "command": "workbench.action.debug.continue"
                },
                {
                    "key": "n",
                    "name": "Step Over Debugging",
                    "type": "command",
                    "command": "workbench.action.debug.stepOver"
                },
                {
                    "key": "o",
                    "name": "Step Out of Debugging",
                    "type": "command",
                    "command": "workbench.action.debug.stepOut"
                },
                {
                    "key": "i",
                    "name": "Step Into Debugging",
                    "type": "command",
                    "command": "workbench.action.debug.stepInto"
                },
                {
                    "key": "k",
                    "name": "Go to Previous Problem Marker",
                    "type": "command",
                    "command": "editor.action.marker.prev"
                },
                {
                    "key": "j",
                    "name": "Go to Next Problem Marker",
                    "type": "command",
                    "command": "editor.action.marker.next"
                }
            ]
        },
        {
            "key": "o",
            "name": "Open...",
            "type": "bindings",
            "bindings": [
                {
                    "key": "p",
                    "name": "Show Problems",
                    "type": "command",
                    "command": "workbench.actions.view.problems"
                },
                {
                    "key": "o",
                    "name": "Show output",
                    "type": "command",
                    "command": "workbench.action.output.toggleOutput"
                },
                {
                    "key": "d",
                    "name": "Show debug",
                    "type": "command",
                    "command": "workbench.debug.action.toggleRepl"
                },
                {
                    "key": "g",
                    "name": "Show source control",
                    "type": "command",
                    "command": "workbench.view.scm"
                },
                {
                    "key": "h",
                    "name": "Toggle Terminal",
                    "type": "command",
                    "command": "workbench.action.terminal.toggleTerminal"
                },
                {
                    "key": "e",
                    "name": "Show tree/explorer view",
                    "type": "conditional",
                    "bindings": [
                        {
                            "key": "",
                            "name": "default",
                            "type": "command",
                            "command": "workbench.view.explorer"
                        },
                        {
                            "key": "when:sideBarVisible && explorerViewletVisible",
                            "name": "Hide explorer",
                            "type": "command",
                            "command": "workbench.action.toggleSidebarVisibility"
                        }
                    ]
                },
                {
                    "key": "a",
                    "name": "Outline",
                    "type": "command",
                    "command": "workbench.action.toggleAuxiliaryBar"
                },
            ]
        },
        {
            "key": "g",
            "name": "Git..",
            "type": "bindings",
            "bindings": [
                {
                    "key": "c",
                    "name": "Git: Commit",
                    "type": "command",
                    "command": "git.commit"
                },
                {
                    "key": "j",
                    "name": "Go to Next Git Hunk Change",
                    "type": "command",
                    "command": "workbench.action.editor.nextChange"
                },
                {
                    "key": "k",
                    "name": "Go to Previous Git Hunk Change",
                    "type": "command",
                    "command": "workbench.action.editor.previousChange"
                },
                {
                    "key": "s",
                    "name": "Git stage",
                    "type": "bindings",
                    "bindings": [
                        {
                            "key": "s",
                            "name": "Git stage selection",
                            "type": "command",
                            "command": "git.stageSelectedRanges"
                        },
                        {
                            "key": "a",
                            "name": "Git stage all",
                            "type": "command",
                            "command": "git.stage"
                        }
                    ]
                },
                {
                    "key": "u",
                    "name": "Git unstage",
                    "type": "bindings",
                    "bindings": [
                        {
                            "key": "s",
                            "name": "Git unstage",
                            "type": "bindings",
                            "command": "git.unstageSelectedRanges"
                        },
                        {
                            "key": "a",
                            "name": "Git unstage all",
                            "type": "bindings",
                            "command": "git.unstage"
                        }
                    ]
                },
                {
                    "key": "r",
                    "name": "Git revert",
                    "type": "bindings",
                    "bindings": [
                        {
                            "key": "s",
                            "name": "Git revert selection",
                            "type": "command",
                            "commands": [
                                "git.revertSelectedRanges"
                            ]
                        },
                        {
                            "key": "a",
                            "name": "Git revert all",
                            "type": "command",
                            "commands": [
                                "editor.action.selectAll",
                                "git.revertSelectedRanges"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}