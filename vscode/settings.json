{
    // vim-like cursor
    "workbench.colorCustomizations": {
        // 光标的颜色设置
        "editorCursor.foreground": "#16C60C",
        // 当前行的背景颜色设置
        "editor.lineHighlightBackground": "#292e42",
        // 状态栏颜色设置
        "statusBar.background": "#1e1e1e",
        "statusBar.foreground": "#9b9b8f",
        "statusBar.border": "#333a48",
    },
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.surround": true,
    "vim.timeout": 500,
    "vim.hlsearch": true,
    "vim.incsearch": true,
    "vim.foldfix": true, // to avoid fold open up autocamatically
    "vim.handleKeys": {
        "<C-a>": false, // use <C-a> to select all
        "<C-f>": false, // use <C-s> to search
        "<C-s>": false, // do not hanle <C-s>, we can use <C-s> to save files
    },
    "vim.leader": ";",
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.vscvimrc",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "whichkey.show"
            ]
        },
        {
            "before": [
                "<leader>",
                "r",
                "r"
            ],
            "commands": [
                "editor.action.rename"
            ]
        },
        {
            "before": [
                "<leader>",
                "e",
            ],
            "commands": [
                "workbench.view.explorer"
            ]
        },
        // terminal
        {
            "before": [
                "<leader>",
                "h",
            ],
            "commands": [
                "workbench.action.terminal.toggleTerminal",
            ]
        },
        {
            "before": [
                "<leader>",
                "e",
                "r"
            ],
            "commands": [
                "python.sortImports"
            ]
        },
        {
            "before": [
                "<leader>",
                "f",
                "d"
            ],
            "commands": [
                "editor.action.formatDocument"
            ],
            "args": [
                {
                    "insertSpaces": true,
                    "tabSize": 4
                }
            ]
        },
